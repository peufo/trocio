  "version": "2.0.0",
  "scripts": {
    "start": "node ./dist/server/server.js",
    "dev": "run-p dev:*",
    "dev:run": "sleep 1 && export NODE_ENV=development && nodemon ./dist/server/server.js --delay 2000ms --watch ./dist/server",
    "dev:api": "tsc -p tsconfig.node.json -w --preserveWatchOutput",
    "dev:vite": "vite dev --host",
    "build": "run-s build:*",
    "build:vite": "vite build",
    "build:api": "tsc -p tsconfig.node.json",
    "sync": "svelte-kit sync",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check-ignore-material": "svelte-kit sync && svelte-check --no-tsconfig --ignore src/lib/material",
    "serve": "pm2 startOrRestart ecosystem.config.js"
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.3.2",
