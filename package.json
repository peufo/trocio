    "@types/express-session": "^1.18.2",
    "@types/http-errors": "^1.8.2",
    "@types/leaflet": "^1.9.20",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.19.14",
    "@types/nodemailer": "^6.4.19",
    "@types/object-path": "^0.11.4",
    "@types/plotly.js": "^2.35.10",
    "@types/qrcode": "^1.5.5",
    "@types/randomatic": "^3.1.5",
    "@types/uuid": "^8.3.4",
    "@types/yamljs": "^0.2.34",
    "mdsvex": "^0.12.6",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
